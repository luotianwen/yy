<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<!-- 订单售后日志(o_orderInfo_service_log)Mapper -->
<mapper namespace="mallOrderServicelogMapper">
    <!--mybatis ehcache缓存配置 -->
    <!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 不使用缓存加入useCache="false" -->
    <!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache" /> -->
    <!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

	<sql id="Base_Column_List">
    	id,oosid ,ptime ,info ,type ,opid ,opname 
    </sql>

    <resultMap type="com.shifeng.entity.order.OrderInfoServiceLog" id="OrderServiceLogReturnMap">
	  <!-- id -->
      <id column="id" property="id"/>
	  <!-- 订单售后id -->
      <result column="oosid" property="oosid"/>
	  <!-- 处理时间 -->
      <result column="ptime" property="ptime"/>
	  <!-- 处理信息 -->
      <result column="info" property="info"/>
	  <!-- 类型 -->
      <result column="type" property="type"/>
	  <!-- 操作人账号 -->
      <result column="opid" property="opid"/>
	  <!-- 操作人姓名 -->
      <result column="opname" property="opname"/>
   </resultMap>
    

	<!-- 根据ID查询表 -->
	<select id="findOrderServiceLogById" parameterType="String" resultMap="OrderServiceLogReturnMap">
		select
			<include refid="Base_Column_List"></include>
		from 
			o_orderInfo_service_log
		where 
			id = #{id}
	</select>

	 
	<!--保存申请售后log -->
	<insert id="saveOrderServiceLog" parameterType="com.shifeng.entity.order.OrderInfoServiceLog">
		insert into o_orderInfo_service_log
			(
		      oosid, ptime, info, type, opid, opname 
			)
		values
			(
		      #{oosid},
		      NOW(),
		      #{info},
		      #{type},
		      #{opid},
		      #{opname}
			)
	</insert>
   
	
</mapper>